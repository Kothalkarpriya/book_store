    <main>
        <section class="logincontainer">
            <h1>Welcome to our Book Store!</h1>
            <article class="loginarticle">
                <form action="/register" method="POST">
                    <div class="row g-3">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="First name" name="firstname" />
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Last name" name="lastname" />
                        </div>
                    </div>
                    <hr>
                    <div class="row g-3">
                        <div class="col">
                            {{!-- <label for="inputCity" class="form-label">City</label> --}}
                            <input type="text" class="form-control" name="city" id="inputCity" placeholder="City" />
                        </div>
                        <div class="col">
                            {{!-- <label for="inputState" class="form-label">State</label> --}}
                            <input id="inputState" class="form-control" placeholder="State" name="state" type="text" />
                        </div>
                        <div class="col-md-2">
                            {{!-- <label for="inputZip" class="form-label">Zip</label> --}}
                            <input type="text" class="form-control" name="zip" placeholder="Zip code" id="inputZip" />
                        </div>
                    </div>
                    <hr>
                    <div class="mb-3">
                        {{!-- <label for="exampleInputEmail1" class="form-label">Email address</label> --}}
                        <input type="email" class="form-control" placeholder="Email address" id="exampleInputEmail1"
                            name="email" aria-describedby="emailHelp" />
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <hr>
                    <div class="col-12">
                        {{!-- <label for="inputAddress" class="form-label">Address Line 1</label> --}}
                        <input type="text" class="form-control" id="inputAddress" name="address"
                            placeholder="Enter your address" />
                    </div>
                    <hr>
                    <div class="mb-3">
                        {{!-- <label for="exampleInputPassword1" class="form-label">Password</label> --}}
                        <input type="password" placeholder="Enter Password" class="form-control" name="password"
                            id="exampleInputPassword" />
                    </div>
                    <div class="mb-3">
                        {{!-- <label for="exampleInputPassword1" class="form-label">Password</label> --}}
                        <input type="password" placeholder="Enter your Password again" class="form-control"
                            name="confirmpassword" id="exampleInputPassword1" />
                    </div>
                    <input type="submit" class="btn btn-primary" value="Register" />

                    <hr>
                    {{!-- <hr> --}}
                    <div class="login">
                        Do you already have account?</div>
                        {{!-- <hr> --}}
                    <a href="./login.hbs" type="submit" class="btn btn-primary">Login</a>
                    
                </form>
            </article>
        </section>
    </main>
